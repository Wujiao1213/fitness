.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-container {
  width: 100%;
  margin-bottom: 20px;
}

.input-container input {
  width: 100%;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 0 10px;
  margin-bottom: 10px;
}

button {
  width: 100%;
  height: 40px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}

.error-message {
  color: red;
  margin-top: 10px;
}

.login-link {
  margin-top: 10px;
  color: #007aff;
  text-decoration: underline;
}